{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "docs/**/*",
    "docs/**/*.vue",
    "docs/.vitepress/**/*"
  ],
  "exclude": [
    "docs/.vitepress/dist",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/.vitepress/*"]
    },
    "types": [
      "node"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  }
} 